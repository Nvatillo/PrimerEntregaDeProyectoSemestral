<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#009688"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Mi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110sp"
                android:layout_marginTop="30sp"
                android:background="#026056"
                android:padding="10sp"
                android:text="Mi"
                android:textColor="#FFEB3B"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="40sp"
                android:layout_weight="1"
                android:text="intranet"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/santotomasTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Santo tomas"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/movilTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MÃ³vil"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="371dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_marginTop="100sp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/Portal"
                    android:layout_width="wrap_content"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:onClick="searchWeb"
                    android:scrollbarSize="4dp"
                    app:srcCompat="@drawable/outline_public_24" />

                <ImageView
                    android:id="@+id/Social"
                    android:layout_width="wrap_content"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:onClick="social"
                    app:srcCompat="@drawable/outline_groups_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Noticias"
                    android:layout_width="wrap_content"
                    android:layout_height="96sp"
                    android:layout_weight="1"
                    android:onClick="noticias"
                    app:srcCompat="@drawable/outline_article_24" />

                <ImageView
                    android:id="@+id/Contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="96sp"
                    android:layout_weight="1"
                    android:onClick="contacto"
                    app:srcCompat="@drawable/outline_contact_mail_24" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/irAlLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:onClick="irAlLogin"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:text="IR AL LOGIN"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>